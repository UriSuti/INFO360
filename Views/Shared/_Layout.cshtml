<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mibo-Cado</title>

    <link rel="icon" type="image/x-icon" href="../assets/logo.png">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.19/index.global.min.js'></script>
    <script>

      document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
          initialView: 'dayGridMonth',
        
        });
        calendar.render();
      });

    </script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">

            <a class="navbar-brand" href='@Url.Action("Indexx", "Home")'><img src="../assets/logoSimple.png" alt="Logo Mibo-Cado"></a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between" id="navbarNav">

            <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                <a class="nav-link" href='@Url.Action("HeladeraVirtual", "Home")'>Heladera virtual</a>
                </li>

                <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="calendarDropdown" role="button" data-bs-toggle="dropdown">Calendario</a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href='@Url.Action("verCalendario", "Home")'>Semana</a></li>
                    <li><a class="dropdown-item" href='@Url.Action("verCalendario", "Home")'>Mes</a></li>
                </ul>
                </li>

                <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="recipesDropdown" role="button" data-bs-toggle="dropdown">Recetas</a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href='@Url.Action("Recetas", "Home")'>Favoritas</a></li>
                    <li><a class="dropdown-item" href='@Url.Action("Recetas", "Home")'>Nuevas</a></li>
                </ul>
                </li>
            </ul>

                <div class="user-icon-container">
                    <i class="bi bi-person user-icon"></i>
                </div>

                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="footer-container">
            <div class="footer-logo">
            <img src="../assets/logo.png" alt="Mibo-Cado Logo">
            </div>

            <div class="footer-contact">
            <h4>Contactanos por:</h4>
            <a href="mailto:MiboCado@gmail.com" class="email">MiboCado@gmail.com</a>

            <div class="footer-icons">
                <a href="#" class="social-icon"><i class="bi bi-instagram"></i></a>
                <a href="#" class="social-icon"><i class="bi bi-facebook"></i></a>
                <a href="#" class="social-icon"><i class="bi bi-telephone-fill"></i></a>
            </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
