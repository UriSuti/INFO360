@{
    ViewData["Title"] = "SignIn";
}

<main> 
    <div class="imgHero">
        <img src="../assets/comida.jpg">
        <div class="titulo">Registro</div>
    </div>
    
    <div class="container mt-3" style="max-width: 400px;">
        <form id="form" method="POST" action='@Url.Action("Registrarse", "Home")' enctype="multipart/form-data">
            <div class="input-group">
                <input type="email" class="form-control" name="email" placeholder="ejemplo@gmail.com" />
                <span class="icono-input"><i class="bi bi-envelope"></i></span>
            </div>

            <div class="input-group">
                <input type="password" class="form-control" name="contraseña" placeholder="Contraseña" />
                <span class="icono-input"><i class="bi bi-lock"></i></span>
            </div>

            <input type="text" class="form-control" placeholder="Nombre" name="nombre" />
            <input type="text" class="form-control" placeholder="Apellido" name="apellido" />
            <input type="number" class="form-control" placeholder="Edad" name="edad" />

            <button type="submit" class="btn btn-success w-100 mt-2">Registrarse</button>
        </form>
    </div>
</main>