@{
    ViewData["Title"] = "Home";
}

  <header>

  </header>
  <main class="main-section">

    <div class="main-hero">
      <img src="assets/comida.jpg" alt="Comida saludable">
      <div class="hero-text">
        <h2>Comer bien<br><span>nunca fue tan fácil</span></h2>
        <button class="btn-login">Iniciar sesión</button>
        <a href="#" class="register-link">Registrarse</a>
